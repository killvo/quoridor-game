{
  "extends": "../tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
